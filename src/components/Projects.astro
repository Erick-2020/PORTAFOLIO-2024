---
import LinkButton from "./LinkButton.astro";
import Angular from "./icons/Angular.astro";
import As from "./icons/As.astro";
import Bootstrap from "./icons/Bootstrap.astro";
import Css from "./icons/Css.astro";
import Git from "./icons/Git.astro";
import Html from "./icons/Html.astro";
import Js from "./icons/Js.astro";
import Tailwind from "./icons/Tailwind.astro";
import Web from "./icons/Web.astro";
const TAGS = {
  ANGULAR: {
    name: "Angular",
    icon: Angular,
  },
  BOOTSTRAP: {
    name: "bootstrap",
    icon: Bootstrap,
  },
  HTML: {
    name: "HTML",
    icon: Html,
  },
  CSS: {
    name: "CSS",
    icon: Css,
  },
  JS: {
    name: "JavaScript",
    icon: Js,
  },
  ASTRO: {
    name: "ASTRO",
    icon: As,
  },
  TAILWIND: {
    name: "Tailwind",
    icon: Tailwind,
  },
};

const PROJECTS = [
  {
    title: "Pagina Web R&H",
    description:
      "Pagina Web de la empresa Propeidades Finca Raiz R&H, actualizada con su ultimo portafolio de uso.",
    link: "#",
    image: "/projects/project-1.webp",
    tags: [TAGS.ANGULAR, TAGS.BOOTSTRAP, TAGS.HTML, TAGS.CSS, TAGS.JS],
  },
  {
    title: "Lista de Tareas",
    description:
      "Mini proyecto para aprendizaje personal con la tecnologia ANGULAR 17",
    link: "#",
    github: "#",
    image: "/projects/project-todoapp.jpg",
    tags: [TAGS.ANGULAR, TAGS.CSS, TAGS.HTML],
  },
  {
    title: "Lista de Tareas",
    description:
      "Mini proyecto para aprendizaje personal con la tecnologia ANGULAR 17",
    link: "#",
    github: "#",
    image: "/projects/project-todoapp.jpg",
    tags: [TAGS.ANGULAR, TAGS.CSS, TAGS.HTML],
  },
];
---

{
  PROJECTS.map((project) => (
    <article class="w-[500px] h-auto p-4">
      <h3 class="text-2xl font-semibold text-red-500/70 mb-2">
        {project.title}
      </h3>
      <p class="text-lg mb-4 text-pretty">{project.description}</p>
      <ul class="flex gap-x-4 flex-row flex-wrap mb-2">
        {project.tags.map((tag) => (
          <li class=" py-1">
            <span
              class={`flex gap-x-2 rounded-full text-xs bg-gray-500/30 py-2 px-2 items-center`}
            >
              <tag.icon class="size-3" />
              {tag.name}
            </span>
          </li>
        ))}
      </ul>
      <img
        class="rounded shadow-2xl shadow-white/10"
        src={project.image}
        alt={`Imagen del proyecto ${project.title}`}
      />
      <div class="flex gap-x-4 justify-center mt-4">
        {project.github && (
          <LinkButton href={project.github}>
            <Git class="size-6 mr-2" />
            Ver CÃ³digo Fuente
          </LinkButton>
        )}

        <LinkButton href={project.link}>
          <Web class="mr-2" />
          Ir al proyecto
        </LinkButton>
      </div>
    </article>
  ))
}
