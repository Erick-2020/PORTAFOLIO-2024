---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import Badge from '../components/Badge.astro';
import AngularIcon from '../components/icons/Angular.astro';
import LinkedIn from '../components/icons/LinkedIn.astro';
import Fb from '../components/icons/Fb.astro'
import Ig from '../components/icons/Ig.astro'
import SocialPill from '../components/icons/SocialPill.astro';
import Git from '../components/icons/Git.astro';
import WhatsApp from '../components/icons/WhatsApp.astro';
import Email from '../components/icons/Email.astro';
import Experience from '../components/Experience.astro';
import Section from '../components/Section.astro';
import Laboral from '../components/icons/Laboral.astro';
import Projects from '../components/Projects.astro';

---

<Layout 
	title="Portafolio de Erick Ramirez - Desarrollador y Programador web con 3 años de experiencia"
	description="Contrata a Erick Ramirez para crear tu aplicación web. Desarrollador Web Especializado en crear aplicaciones únicas">
	<main class="px-4">
		<Section class="py-44 pb-35">
			<h1 class="text-white text-3xl md:text-4xl lg:text-5xl font-bold flex flex-row gap-x-4 pb-6 lg:pb-10">Hey, soy Erick Ramirez
				<a
					href="https://www.linkedin.com/in/ingerick/"
					target="_blank"
					rel="noopener"
					class="flex justify-center items-center"><Badge>Disponible para trabajar</Badge></a>
				</h1>
			<h2 class=" text-xl lg:text-2xl text-wrap max-w-[700px]"><span>+2 años de experiencia.</span>
				<span class="text-yellow-200/90">Desarrollador Web Frontend y Broker.</span>
				<span class="text-green-200/90">De Villeta, Colombia.</span>
				<span class="opacity-85">Especializado en crear aplicaciones unicas.</span>
			</h2>

			<nav class="flex gap-4 mt-8 flex-wrap">
				<SocialPill href="#">
					<LinkedIn class="size-4" />
						LinkedIn
				</SocialPill>
				<SocialPill href="#" >
					<Git class="size-4 md:size-6" />
						GitHub
				</SocialPill>
				<SocialPill href="mailto:eramirezhenandez@gmail.com">
					<Email class="size-4" />
						eramirezhenandez@gmail.com
				</SocialPill>
				<SocialPill href="#">
					<Fb class="size-4" />
						Facebook
				</SocialPill>
				<SocialPill href="#">
					<Ig class="size-4" />
						Intagram
				</SocialPill>
				<SocialPill href="#">
					<WhatsApp class="size-4" />
						WhatsApp
				</SocialPill>
				
			</nav>
		</Section>

		<Section id="experiencia">
			<h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center">
				<Laboral class="size-7" />
				Experiencia Laboral
			</h2>
			<Experience />
		</Section>

		<Section id="proyectos">
			<h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center">
				<Laboral class="size-7" />
				Proyectos
			</h2>
			<Projects />
		</Section>
	</main>
</Layout>

