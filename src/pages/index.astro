---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import Badge from '../components/Badge.astro';
import AngularIcon from '../components/icons/Angular.astro';
import LinkedIn from '../components/icons/LinkedIn.astro';
import Fb from '../components/icons/Fb.astro'
import Ig from '../components/icons/Ig.astro'
import SocialPill from '../components/icons/SocialPill.astro';
import Git from '../components/icons/Git.astro';
import WhatsApp from '../components/icons/WhatsApp.astro';
import Email from '../components/icons/Email.astro';
import Experience from '../components/Experience.astro';
import Section from '../components/Section.astro';
import Laboral from '../components/icons/Laboral.astro';
import Projects from '../components/Projects.astro';

---

<Layout 
	title="Portafolio de Erick Ramirez - Desarrollador y Programador web con 3 años de experiencia"
	description="Contrata a Erick Ramirez para crear tu aplicación web. Desarrollador Web Especializado en crear aplicaciones únicas"
	>
	<main class="px-4">
		<section class="flex pt-44 justify-center items-center">
			<div>
				<h1 class="text-white text-3xl md:text-4xl lg:text-5xl font-bold flex flex-row gap-x-4 pb-6 lg:pb-10">Hola, soy Erick Ramirez
					<a
						href="https://www.linkedin.com/in/ingerick/"
						target="_blank"
						rel="noopener"
						class="flex justify-center items-center"><Badge>Disponible para trabajar</Badge></a>
					</h1>
				<h2 class=" text-xl lg:text-2xl text-wrap max-w-[700px]"><span>+2 años de experiencia.</span>
					<span class="text-red-500/70">Desarrollador Web Frontend y Broker.</span>
					<span class="text-green-200/90">De Villeta, Colombia.</span>
					<span class="opacity-85">Especializado en crear aplicaciones únicas.</span>
				</h2>
			</div>
			<div class="flex items-center px-20">
				<img 
					class="rounded w-40" 
					src="https://scontent-bog2-1.xx.fbcdn.net/v/t39.30808-6/415985390_2005474646491217_3894443421400820042_n.jpg?_nc_cat=107&ccb=1-7&_nc_sid=efb6e6&_nc_ohc=eZLgP7Mt1s4AX9-5BUT&_nc_ht=scontent-bog2-1.xx&oh=00_AfD9KXuLIvDP5yqQUdmLvhuTSySk5UHBQ1US8R_pMGoPDg&oe=65ADF041" 
					alt="Erick Foto"
				/>
			</div>
		</section>
		<section class="flex justify-center items-center pt-10 pb-40">
			<nav class="flex gap-4 mt-8 flex-wrap">
				<SocialPill href="#">
					<LinkedIn class="size-4" />
						LinkedIn
				</SocialPill>
				<SocialPill href="#" >
					<Git class="size-4 md:size-6" />
						GitHub
				</SocialPill>
				<SocialPill href="mailto:eramirezhenandez@gmail.com">
					<Email class="size-4" />
						eramirezhenandez@gmail.com
				</SocialPill>
				<SocialPill href="#">
					<Fb class="size-4" />
						Facebook
				</SocialPill>
				<SocialPill href="#">
					<Ig class="size-4" />
						Instagram
				</SocialPill>
				<SocialPill href="#">
					<WhatsApp class="size-4" />
						WhatsApp
				</SocialPill>
			</nav>
			<div class="bg-white text-black text-xs font-semibold fixed right-9 bottom-9 flex items-center py-1 px-1 gap-x-1 rounded-xl z-10 shadow-md shadow-white">
				<WhatsApp class="size-4" />
					<button id="botonContacto" class="">Contáctame</button>
			</div>

		</section>
			
		<Section id="experiencia">
			<h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center">
				<Laboral class="size-7" />
				Experiencia Laboral
			</h2>
			<Experience />
		</Section>

		<Section id="proyectos">
			<h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center">
				<Laboral class="size-7" />
				Proyectos
			</h2>
			<Projects />
		</Section>
	</main>
</Layout>

